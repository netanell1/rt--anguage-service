{
  "name": "rt-language-service",
  "displayName": "rt language service",
  "repository": {
    "url": "https://github.com/netanell1/rt-language-service",
    "type": "git"
  },
  "description": "Provides auto-completions and validation for react-cli-rt",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:component-rt"
  ],
  "contributes": {
    "jsonValidation": [
      {
        "fileMatch": "rt.json",
        "url": "./schemas/rt-schema.json"
      }
    ],
    "languages": [
      {
        "id": "component-rt",
        "extensions": [
          ".template"
        ],
        "aliases": [
          "Component Template"
        ]
      }
    ],
    "grammars": [
      {
        "language": "component-rt",
        "scopeName": "source.component-rt",
        "path": "./syntaxes/component-rt.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.9.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1"
  }
}